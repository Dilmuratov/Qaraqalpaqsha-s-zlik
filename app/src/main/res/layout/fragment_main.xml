<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_monets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_btn"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:src="@drawable/ic_monet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="11dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/gilroy_regular"
            android:gravity="start"
            android:text="9150"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_dictionary"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/tv_qq_sozlik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gilroy_regular"
        android:gravity="center"
        android:text="@string/qq_sozlik"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_add_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_add_term"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/tv_add_term"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_regular"
            android:gravity="start"
            android:text="Jańa sóz qosıw"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:src="@drawable/ic_more" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_all_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_all_terms"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:src="@drawable/ic_all_terms" />

        <TextView
            android:id="@+id/tv_all_terms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_regular"
            android:gravity="start"
            android:text="Sózlerdi tekseriw"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:src="@drawable/ic_more" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>